---
import ToolLayout from '../../layouts/ToolLayout.astro';
import FAQ from '../../components/FAQ.astro';
import AdUnit from '../../components/AdUnit.astro';
import { schoolsByCountry } from '../../data/schools';

const title = 'School GPA Calculators for Singapore and Malaysia Universities';
const description = 'Find your school-specific GPA calculator. Includes all Singapore autonomous universities and polytechnics plus Malaysian public universities.';

const schema = {
  '@context': 'https://schema.org',
  '@type': 'CollectionPage',
  name: title,
  description,
  url: 'https://gpacalc.app/schools'
};

const faqs = [
  {
    question: 'Why use a school-specific GPA calculator?',
    answer: 'Different institutions use different GPA scales and grade points. A school-specific calculator prevents conversion mistakes and gives you realistic CGPA projections.'
  },
  {
    question: 'Do NUS, NTU and SMU use the same GPA scale?',
    answer: 'NUS and NTU commonly use a 5.0 scale, while SMU uses a 4.0 cumulative GPA scale. Always choose your exact school before calculating.'
  },
  {
    question: 'Are Singapore Polytechnic grades different from university grades?',
    answer: 'Yes. Singapore polytechnics such as SP and NP use a 4.0 scale, while major Singapore universities use a 5.0 scale.'
  },
  {
    question: 'Can I switch schools inside the calculator?',
    answer: 'Yes. Every school page pre-selects that school, but you can still switch to another grading system from the dropdown.'
  }
];

const countryOrder = ['Singapore', 'Malaysia', 'India', 'United States'];
---

<ToolLayout title={title} description={description} schema={schema} faqs={faqs} breadcrumbs={[
  { name: 'Home', url: 'https://gpacalc.app/' },
  { name: 'Schools', url: 'https://gpacalc.app/schools/' }
]}>
  <section class="mb-6">
    <h1 class="text-3xl md:text-4xl font-extrabold text-stone-900 mb-3 tracking-tight">School GPA Calculators</h1>
    <p class="text-lg text-stone-500 font-medium max-w-2xl">
      Choose your school to get accurate GPA and CGPA projections with the right grading scale.
    </p>
  </section>

  <section class="grid gap-6 mb-10">
    {countryOrder.filter((country) => schoolsByCountry[country]?.length).map((country) => (
      <div class="bg-white border border-stone-200 rounded-2xl p-6">
        <h2 class="text-2xl font-bold text-stone-900 mb-4">{country}</h2>
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-3">
          {schoolsByCountry[country].map((school) => (
            <a
              href={`/schools/${school.id}`}
              data-school-id={school.id}
              data-country={country}
              class="group rounded-xl border border-stone-200 p-4 bg-[#FFFBF5] hover:border-emerald-400 transition-colors"
            >
              <div class="flex items-center justify-between gap-3">
                <p class="font-bold text-stone-900">{school.shortName}</p>
                <span class="text-xs font-semibold px-2 py-1 rounded-full bg-emerald-100 text-emerald-700">
                  {school.maxGPA.toFixed(1)} Scale
                </span>
              </div>
              <p class="mt-1 text-sm text-stone-500">{school.name}</p>
              <p class="mt-3 text-xs text-stone-400 group-hover:text-emerald-600 transition-colors font-semibold">
                Open {school.shortName} GPA calculator
              </p>
            </a>
          ))}
        </div>
      </div>
    ))}
  </section>

  <AdUnit placement="in-content" />

  <FAQ items={faqs} />

  <script>
    type TrackPayload = Record<string, string | number | boolean>;
    const trackEvent = (name: string, payload: TrackPayload = {}) => {
      const umami = (window as Window & {
        umami?: {
          track?: (eventName: string, eventData?: TrackPayload) => void;
        };
      }).umami;
      if (!umami?.track) return;
      umami.track(name, payload);
    };

    document.querySelectorAll('a[data-school-id]').forEach((link) => {
      link.addEventListener('click', () => {
        const schoolId = (link as HTMLElement).dataset.schoolId || '';
        const country = (link as HTMLElement).dataset.country || '';
        trackEvent('school_card_clicked', {
          school_id: schoolId,
          country
        });
      });
    });
  </script>
</ToolLayout>
